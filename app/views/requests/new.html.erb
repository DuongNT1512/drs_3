<h1><%= t "request.new_request" %></h1>
<div class="col-md-6 col-md-offset-2">
  <%= simple_form_for @request do |f| %>
    <%= render "shared/error_messages", object: @request %>
    <div class="form-group">
      <%= f.label :kind %>
      <%= f.select :kind, options_for_select(@kind), class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :date_leave_from %>
      <%= f.text_field :date_leave_from, class: "form-control datepicker" %>
    </div>

    <div class="form-group">
      <%= f.label :date_leave_to %>
      <%= f.text_field :date_leave_to, class: "form-control datepicker" %>
    </div>

    <div class="form-group">
      <%= f.label :reason %>
      <%= f.text_field :reason, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :compensation_time_from %>
      <%= f.text_field :compensation_time_from, class: "form-control datepicker" %>
    </div>

    <div class="form-group">
      <%= f.label :compensation_time_to %>
      <%= f.text_field :compensation_time_to, class: "form-control datepicker" %>
    </div>

    <div class="form-group">
      <%= f.submit t("request.submit"), class: "btn btn-primary" %>
    </div>

  <% end %>
</div>
