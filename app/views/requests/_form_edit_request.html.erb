<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for @request do |f| %>

      <%= render "shared/error_messages", object: @request %>

      <%= f.label :kind %>
      <%= f.select :kind, options_for_select(@kinds, @request.kind),
        class: "form-control" %>

      <%= f.label :date_leave_from %>
      <%= f.text_field :date_leave_from, class: "form-control" %>

      <%= f.label :date_leave_to %>
      <%= f.text_field :date_leave_to, class: "form-control" %>

      <%= f.label :compensation_time_from %>
      <%= f.text_field :compensation_time_from, class: "form-control" %>

      <%= f.label :compensation_time_to %>
      <%= f.text_field :compensation_time_to, class: "form-control" %>

      <%= f.label :reason %>
      <%= f.text_field :reason, class: "form-control" %>

      <%= f.submit t("request.update"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
