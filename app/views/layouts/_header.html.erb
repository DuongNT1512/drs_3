<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("footer.page_name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to t("header.request"), requests_path %></li>
          <li><%= link_to t("header.report"), reports_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="hidden-xs">
                <%= current_user.username || current_user.email %>
              </span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("header.profile"), users_path %></li>
              <li>
                <%= link_to t("header.setting"),"#" %>
              </li>
              <li><%= link_to t("header.users"), users_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(:logout), destroy_user_session_path, method: :delete, data: {confirm: t(:sure)} %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("header.login"), user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
