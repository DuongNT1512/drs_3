<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("footer.page_name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="hidden-xs"><%= current_user.username %></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("header.profile"), "#" %></li>
              <li><%= link_to t("header.setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("logout"), destroy_user_session_path,
                  data:{confirm: t("sure") }, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("header.login"), user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
