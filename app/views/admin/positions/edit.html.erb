<div class="td-index">
  <h1><%= @position.name %></h1>
  <%= form_for [:admin, @position] do |f| %>
    <%= render "shared/error_messages", object: @position %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <%= f.submit t("position.update"), class: "btn btn-success" %>
  <% end %>
</div>
