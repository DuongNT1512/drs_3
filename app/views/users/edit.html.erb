<% provide :title, t("user.edit_user") %>
<div class=" col-md-6 col-md-offset-3 dn-front-group">
  <h1><%= t :update_profile %></h1>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_for @user do |f| %>
        <%= render "shared/error_messages", object: @user %>
        <%= f.label :username %>
        <%= f.text_field :username, class: "form-control" %>

        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control" %>

        <%= f.submit t("user.save_change"), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
