<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <h1 class="text-center"><%= t "login" %></h1>
    <hr>
    <%= form_for resource, as: resource_name,
      url: session_path(resource_name) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: t("session.email_address"),
         class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off",
          placeholder: t("session.password"), class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group td-new">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.submit t("login"), class: "btn btn-primary btn-block btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
