<%= search_form_for @search, url: admin_languages_path, method: :get do |f| %>
  <div class="field col-md-6">
    <%= f.label :name %>
    <%= f.text_field :name_cont, class: "form-control",
      placeholder: t("language.name") %>
  </div>

  <div class="actions">
    <%= f.submit t(:search), class: "btn btn-success " %>
  </div>
<% end %>
